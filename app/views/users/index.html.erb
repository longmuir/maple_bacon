<div class="row">
  <div class="small-6 large-centered columns">
    <h1>List of Users</h1>
  </div>
</div>

<div class="row">
  <div class="small-6 large-centered columns">

    <table class="users">
      <th>Name</th>
      <th>Email</th>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
          <% if current_user.admin? && !current_user?(user) %>
            <td><%= link_to "delete", 
                            user, 
                            method: :delete, 
                            data: { confirm: "Are you sure you want to delete #{user.name}?" } %> 
          <% end %>
        </tr>
      <% end %>
    </table>

  </div>
</div>
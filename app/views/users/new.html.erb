<div id = "title">
  <h1>Sign Up for Maple Bacon</h1>
</div>
  <div class = "row">
    <div class = "small-6 small-centered columns">
    <%= form_for @user do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Create My Account", class: "brown-button" %>
    <% end %>
  </div>
</div>
<h1 class = "title">Sign Up</h1>
  <div class = "row">
    <div class = "small-6 small-centered columns">
    <%= form_for @user do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.submit "Create my account" %>
    <% end %>
  </div>
</div>